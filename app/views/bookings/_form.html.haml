= form_for(@booking) do |f|
  - if @booking.errors.any?
    #error_explanation
      %h2
        = pluralize(@booking.errors.count, "error")
        prohibited this booking from being saved:
      %ul
        - @booking.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :comment
    %br/
    = f.text_area :comment
  .field
    = f.label :status
    %br/
    = f.text_field :status
  .actions
    = f.submit
