%h3 Image: 
= image_tag current_user.user_image

%h3 Name:  
= current_user.first_name

%h4 About me: 
= current_user.about_me

%h4 My Boat: 
= current_user.boat.try :description

%h4 Image of the boat: 
= image_tag current_user.boat.try :boat_image

%h4 Journeys in the past:
-if current_user.journeys_as_captain.journeys_in_past.any?
  - current_user.journeys_as_captain.journeys_in_past.each do |journey|
    = "Start of the journey: #{journey.start_city}"
    = "End of the journey: #{journey.end_city}"
    = "Start date: #{journey.start_date.strftime('%d/%m/%Y')}"
    = "End date: #{journey.end_date.strftime('%d/%m/%Y')}"
    = link_to 'Show', journey
- else 
  no journeys as captain in the past.

%h4 Journeys in the future:
-if current_user.journeys_as_captain.journeys_in_future.any? 
  - current_user.journeys_as_captain.journeys_in_future.each do |journey|
    = "Start of the journey: #{journey.start_city}"
    = "End of the journey: #{journey.end_city}"
    = "Start date: #{journey.start_date.strftime('%d/%m/%Y')}"
    = "End date: #{journey.end_date.strftime('%d/%m/%Y')}"
    = link_to 'Show', journey
- else 
  no journeys as captain in the future.




