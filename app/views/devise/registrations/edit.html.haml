=image_tag("backgroundb_w.jpg", class: "background_image")

.container_above_image
  .white_container

    %h2
      Edit #{resource_name.to_s.humanize}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      %br
      = devise_error_messages!
      = f.label :remote_user_image_url

      = f.file_field :user_image, placeholder: "Upload an image", label: false
      %br
      = f.text_field :remote_user_image_url, placeholder: "Remote Image URL"
      %br
      = f.text_field :first_name, autofocus: true, placeholder: :first_name
   
      = f.text_field :last_name, autofocus: true, placeholder: :last_name

      %br
      = f.email_field :email, autofocus: true, placeholder: :email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      
      %br
      = f.label :password
      (leave blank if you don't want to change it)
     
      = f.password_field :password, autocomplete: "off"
      %br
      = f.label :password_confirmation
      
      = f.password_field :password_confirmation, autocomplete: "off"
      %br
      = f.label :current_password
      (we need your current password to confirm your changes)
      
      = f.password_field :current_password, autocomplete: "off"
      .actions
      =f.submit "Update"
      %br
      %br
    %h3 Cancel my account
    %br
    %p
      Unhappy? 

      #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
    = link_to "Back", :back, class: "btn b_w"
