%nav
  = link_to "Ahoy Mate", root_path
  - if user_signed_in?      
    %p Signed in as #{current_user.first_name}
    %ul
      %li= link_to "Edit Profile", edit_user_registration_path
      %li= link_to "Log Out", destroy_user_session_path, method: :delete
      %li= link_to "List Sailing Trip", new_journey_path
      %li= link_to "My Profile", profile_path(current_user)
      - if current_user.boat.present?
        %li= link_to "Manage Boat", edit_boat_path(current_user.boat)
      - else
        %li= link_to "Add Boat", new_boat_path
      %li= link_to "My Journeys", bookings_path
  - else
    %p
    %ul
      %li= link_to "Log In", new_user_session_path
      %li= link_to "Sign Up", new_user_registration_path
      %li= link_to "List Sailing Trip", new_journey_path
     